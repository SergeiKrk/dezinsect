---
import { markdownify } from "@lib/utils/textConverter";
import 'animate.css';
const { banner } = Astro.props;
const { title, button, image, content } = banner;
---

<section class="section banner relative">
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6">
        <h1 class="banner-title animate__animated animate__headShake" set:html={markdownify(title)} />

        <p class="mt-6" set:html={markdownify(content)} />

        {
          button.enable && (
            <a class="btn btn-white hover:bg-[#EDF7F3] mt-8 animate__animated animate__heartBeat" href={button.link}>
              {button.label}
            </a>
          )
        }
      </div>
      <div class="lg:col-6 flex justify-center">
        <span class="animate-ping absolute h-[150px] lg:h-[250px] w-[150px] lg:w-[250px] rounded-full bg-primary opacity-20"></span>
        <img
          class="w-full object-contain animate__animated animate__fadeIn"
          alt="banner"
          src={image}
          width={577}
          height={577}
        />
      </div>
    </div>
  </div>

  <img
    class="banner-shape invisible absolute -top-28 right-0 -z-[1] w-full max-w-[55%] xl:visible"
    alt="banner"
    src="/images/bg-home-start.webp"
    width={1142}
    height={761}
  />
</section>
