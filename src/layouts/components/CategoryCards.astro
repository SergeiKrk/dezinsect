---
const { categoryCards } = Astro.props;
const { page_name, serviceIcon, url_page } = categoryCards;
---

{
  categoryCards && (
    <section class="my-8 mb-12">
      <div class="container">
        <div class="row ">
          {categoryCards.map((item: any) => (
            <div class="mb-8 md:col-6 lg:col-4">
              <a
                href={item.url_page}
                rel="prefetch-intent"
                class="flex rounded-xl bg-white p-3 shadow-lg hover:bg-[#EDF7F3] hover:shadow-xl hover:grayscale-0 lg:p-4 lg:grayscale"
              >
                <div class="w-30 h-30 flex items-center justify-center text-red-500 lg:mr-4">
                  <svg
                    class="z-10"
                    xmlns="http://www.w3.org/2000/svg"
                    width="100"
                    height="100"
                    viewBox="0 0 24 24"
                  >
                    <g transform="rotate(90 12 12)">
                      <path
                        fill="#ec6227"
                        d="M20.94 11A8.994 8.994 0 0 0 13 3.06V2c0-.55-.45-1-1-1s-1 .45-1 1v1.06A8.994 8.994 0 0 0 3.06 11H2c-.55 0-1 .45-1 1s.45 1 1 1h1.06A8.994 8.994 0 0 0 11 20.94V22c0 .55.45 1 1 1s1-.45 1-1v-1.06A8.994 8.994 0 0 0 20.94 13H22c.55 0 1-.45 1-1s-.45-1-1-1h-1.06zM12 19c-3.87 0-7-3.13-7-7s3.13-7 7-7s7 3.13 7 7s-3.13 7-7 7z"
                      />
                    </g>
                  </svg>
                  <img
                    alt={item.page_name}
                    class="w-100 h-100 absolute object-cover"
                    width={60}
                    height={60}
                    src={item.serviceIcon}
                  />
                </div>
                <div class="text-md inline-flex items-center font-semibold text-primary">
                  {item.page_name}
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
