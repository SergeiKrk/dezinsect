    <div class="">
      <label for="hero-name" class="sr-only">Имя</label>
      <input type="text" id="hero-name" name="hero-name" class="py-3 px-4 block w-full xl:min-w-[10rem] border-gray-200 shadow-sm rounded-lg focus:z-10 focus:border-primary focus:ring-primary dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400" placeholder="Ваше имя">
    </div>
