---
import { Icon } from "astro-icon";
const { place } = Astro.props;
const { title, description, place_list } = place;
---

{
  place && (
    <section class="my-8 mt-24">
      <div class="container">
        <div class="row ">
          <div class="mx-auto text-center lg:col-8">
            <h2>{title}</h2>
            <p class="mt-4">{description}</p>
          </div>
        </div>
        <div class="m-1 mb-24 mt-14">
          {place_list.map((item: any) => (
            <div class="m-2 inline-block rounded-xl bg-white px-4 py-1 shadow-lg">
              <div class="flex items-center space-x-3">
                <div class="icon my-1 rounded-full bg-green-50 p-2">
                  <Icon class="inline h-5 w-5" name={item.icon} />
                </div>
                <h3 class="text-lg">{item.title}</h3>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
