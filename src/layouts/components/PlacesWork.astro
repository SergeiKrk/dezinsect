---
import { Icon } from "astro-icon";
const { place } = Astro.props;
const { title, description, place_list } = place;
---

{
  place && (
    <section class="my-8 mt-24">
      <div class="container">
        <div class="row ">
          <div class="mx-auto text-center lg:col-8">
            <h2>{title}</h2>
            <p class="mt-4">{description}</p>
          </div>
        </div>
        <div class="row mb-24 mt-14 grid gap-2 text-center sm:grid-cols-2 lg:grid-cols-4">
          {place_list.map((item: any) => (
            <div class="flex flex-col justify-between rounded-xl bg-white px-5 py-2 shadow-lg">
              <div class="integration-card-head flex items-center space-x-4">
                <div class="icon my-2 rounded-full bg-green-50 p-2">
                  <Icon class="inline h-7 w-7" name={item.icon} />
                </div>
                <h3 class="text-xl">{item.title}</h3>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )
}
