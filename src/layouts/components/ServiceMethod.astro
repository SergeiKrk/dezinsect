---
import VideoComponent from "@layouts/function-components/VideoComponent";
import { AiFillPlusCircle, AiFillMinusCircle } from "react-icons/ai/index.js";
import { Image } from "@astrojs/image/components";
const { service } = Astro.props;
const { title, description, our_service } = service;
---

<section class="my-8 mt-24">
  <div class="container">
    <div class="mx-auto text-center lg:max-w-3xl">
      <h2>Методы обработки помещения {title}</h2>
      <p class="mt-4">{description}</p>
    </div>
    {
      our_service.map((item: any, index: number) => (
        <div class="gx-5 row mt-12 items-center lg:mt-0">
          <div class={`lg:col-5 ${index % 2 === 0 ? "order-0" : "order-1"}`}>
            {item.image && (
              <div class="relative">
                <Image
                  class="w-full object-contain"
                  alt="service"
                  width={667}
                  height={498}
                  src={item.image}
                />
                <Image
                  class="absolute bottom-6 left-1/2 -z-[1] -translate-x-1/2"
                  src="/images/shape-2.png"
                  alt=""
                  height={147}
                  width={151}
                />
              </div>
            )}
            {item.video && (
              <VideoComponent
                client:load
                src={item.video.thumbnail}
                height={370}
                width={700}
                title={item.title}
                video_id={item.video.video_id}
                video_width="w-[700px]"
                video_height="h-[370px]"
              />
            )}
          </div>
          <div
            class={`mt-6 lg:col-7 lg:mt-0 ${
              index % 2 === 0 ? "order-1" : "order-0"
            }`}
          >
            <div class={`${index % 2 === 0 ? "ml-4" : "mr-4"}`}>
              <h2 class="lg:text-3xl mb-6">{item.title}</h2>
              <p class="my-4">{item.description}</p>
              {item.principle_operation && (
                <p class="font-bold my-2">Принцип действия:</p>
                <p>{item.principle_operation}</p>
                )}
              {item.advantages_list && (
                <p class="my-3 font-bold">Преимущества метода:</p>
                <ul class="text-dark lg:-ml-4">
                  {item.advantages_list &&
                  item.advantages_list.map((list: any) => (
                    <li class="flex items-center rounded px-4">
                      <AiFillPlusCircle className="mr-3 fill-primary text-white" />
                      {list}
                    </li>
                  ))}
                </ul>
              )}
              {item.disadvantages_list && (
                <p class="my-3 font-bold">Недостатки метода:</p>
                <ul class="text-dark lg:-ml-4">
                  {item.disadvantages_list &&
                  item.disadvantages_list.map((negativelist: any) => (
                    <li class="flex items-center px-4">
                      <span><AiFillMinusCircle className="mr-3 fill-secondary text-white" /></span>
                      {negativelist}
                    </li>
                  ))}
                </ul>
              )}
              {item.button && item.button.enable && (
                <a class="btn btn-white mt-6" href={item.button.link}>
                  {item.button.label}
                </a>
              )}
              <ul class="mt-6 text-dark lg:-ml-4">
                {item.list &&
                  item.list.map((list: any) => (
                    <li class="mb-2 flex items-center rounded px-4">
                      <AiFillPlusCircle className="mr-3 fill-primary text-white" />
                      {list}
                    </li>
                  ))}
              </ul>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
