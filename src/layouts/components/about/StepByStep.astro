---
import { Image } from "@astrojs/image/components";
const { steps } = Astro.props;
const { title, descript, button, step_list } = steps;
---

<section class="my-8 mt-24">
  <div class="container">
    <div class="row items-center justify-between">
      <div class="md:col-9">
        <h2 class="text-center md:text-left" set:html={title} />
        <p class="mt-4 text-lg">{descript}</p>
      </div>
      {
        button.enable && (
          <div class="mt-6 text-center md:col-3 md:mt-0 md:text-right">
            <a class="btn btn-primary" href={button.link}>
              {button.label}
            </a>
          </div>
        )
      }
    </div>
    <div class="row mt-14">
      {
        step_list.map((item: any, i: number) => (
          <div class="mb-8 sm:col-6 lg:col-4">
            <div class="flex flex-row items-center rounded-xl shadow-lg bg-white p-6">
              <div class="gradient-number min-w-[90px] relative inline-block mr-3">
                <span class="bg-gradient absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
                  {i > 8 ? i + 1 : `0${i + 1}`}
                </span>
                <Image
                  height={90}
                  width={90}
                  src="/images/gradient-number-bg.png"
                  alt=""
                />
              </div>
              <div class="my-2 text-lg font-bold">{item.title}</div>
              {item.decript && <p>{item.decript}</p>}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
