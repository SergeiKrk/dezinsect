---
import { humanize, markdownify, slugify } from "@lib/utils/textConverter";
const { page_data } = Astro.props || {};
const { title, imgBanner, serviceIcon, altserviceIcon, description, minPric, content } = page_data || {};
---

<section class="section my-8 lg:mx-[10%] rounded-xl bg-[#EDF7F3] py-12">
  <div class="container">
    <div class="row">
      <div
        class="mb-14 text-center lg:col-6 lg:order-1 lg:mb-0 lg:mt-0 lg:text-left"
      >
        <h1
          set:html={markdownify(
            page_data.page_title
          )}
        />
        <p class="mt-6" set:html={markdownify(content)} />
        <div class="flex flex-row">
          <img
          class="mr-4 "
          src={page_data.serviceIcon}
          width={100}
          height={100}
          alt={page_data.altServiceIcon}
        />          
        <p class="mt-6" set:html={markdownify(page_data.description)} />
        </div>
        <p class="text-2xl mt-4 lg:text-4xl text-[#1C6767]">от <span class="mt-6" set:html={markdownify(page_data.minPric)} /> ₽</p>
        <!-- {
          banner.button.enable && (
            <a class="btn btn-primary mt-6" href={banner.button.link}>
              {banner.button.label}
            </a>
          )
        } -->
      </div>
      <div class="lg:col-6 lg:order-2 flex justify-center items-center">
        <span class="animate-ping absolute h-[150px] lg:h-[250px] w-[150px] lg:w-[250px] rounded-full bg-primary opacity-20"></span>
        <img
          class="mx-auto"
          src={page_data.imgBanner}
          width={412}
          height={483}
          alt={page_data.page_title}
        />
      </div>
    </div>
  </div>
</section>
