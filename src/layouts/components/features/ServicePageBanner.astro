---
import MyForm from "@components/MyForm.astro";
import { markdownify } from "@lib/utils/textConverter";
const { pageBanner } = Astro.props || {};
const {
  title_page,
  imgBanner,
  serviceIcon,
  altService,
  description,
  minPric,
  content,
} = pageBanner || {};
---

<section class="section my-8 rounded-xl bg-[#EDF7F3] py-12 lg:mx-[10%]">
  <div class="container">
    <div class="row">
      <div
        class="mb-14 text-center lg:col-6 lg:order-1 lg:mb-0 lg:mt-0 lg:text-left"
      >
        <h1 class="text-2xl lg:text-4xl" set:html={markdownify(title_page)} />

        <div class="mt-6 flex flex-col sm:flex-row lg:items-center">
          <div
            class="w-180 h-180 flex items-center justify-center text-red-500 lg:mr-4"
          >
            <svg
              class="z-10"
              xmlns="http://www.w3.org/2000/svg"
              width="180"
              height="180"
              viewBox="0 0 24 24"
              ><g transform="rotate(90 12 12)"
                ><path
                  fill="#ec6227"
                  d="M20.94 11A8.994 8.994 0 0 0 13 3.06V2c0-.55-.45-1-1-1s-1 .45-1 1v1.06A8.994 8.994 0 0 0 3.06 11H2c-.55 0-1 .45-1 1s.45 1 1 1h1.06A8.994 8.994 0 0 0 11 20.94V22c0 .55.45 1 1 1s1-.45 1-1v-1.06A8.994 8.994 0 0 0 20.94 13H22c.55 0 1-.45 1-1s-.45-1-1-1h-1.06zM12 19c-3.87 0-7-3.13-7-7s3.13-7 7-7s7 3.13 7 7s-3.13 7-7 7z"
                ></path></g
              ></svg
            >
            <img
              alt={altService}
              class="w-100 h-100 absolute object-cover"
              width={100}
              height={100}
              src={pageBanner.serviceIcon}
            />
          </div>

          <div>
            <div set:html={markdownify(pageBanner.description)} />
            <p class="mt-4 text-2xl text-[#1C6767] lg:text-4xl">
              от <span
                class="mt-6"
                set:html={markdownify(pageBanner.minPric)}
              /> ₽
            </p>
          </div>
        </div>

        <MyForm form_name={pageBanner.title_page} id_number="1" />
      </div>
      <div class="flex items-center justify-center lg:col-6 lg:order-2">
        <img
          class="mx-auto"
          src={pageBanner.imgBanner}
          width={412}
          height={483}
          alt={pageBanner.title_page}
        />
      </div>
    </div>
  </div>
</section>
