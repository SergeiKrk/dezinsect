---
import { Image } from "@astrojs/image/components";
import PageHeader from "@components/PageHeader.astro";
import config from "@config/config.json";
import Base from "@layouts/Base.astro";
import WriteFeedback from "@layouts/function-components/WriteFeedback";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("contact", "index");
const { contact_form_action } = config.params;
const contact = entry.data;
const page_data = {
  ...contact,
  content: contact.body,
};
---

<Base
  title={contact.title}
  meta_title={contact.meta_title}
  description={contact.description}
  image={contact.image}
>
  <section class="page-hero pb-6 pt-16">
    <div class="container"><PageHeader page_data={page_data} /></div>
  </section>

  <section class="section pt-0">
    <div class="container">
      <div class="row">
        <div class="mb-10 text-center md:col-6 md:order-2 md:mb-0 md:pt-9">
          <div class="contact-img relative inline-flex pb-5 pl-5">
            <Image
              src="/images/contacts.webp"
              height={544}
              width={500}
              alt=""
            />
          </div>
        </div>
        <div class="md:col-6 md:order-1">
          <form
            class="lg:max-w-[484px]"
            method="POST" 
            netlify
            netlify-honeypot
          >
            <div class="form-group mb-5">
              <label class="form-label" for="name"></label>
              <input
                class="form-control"
                type="text"
                id="name"
                placeholder="Ваше имя"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="eamil"></label>
              <input
                class="form-control"
                type="text"
                id="email"
                placeholder="адрес вашей почты"
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="message"></label>
              <textarea
                class="form-control h-[150px]"
                id="message"
                cols="30"
                rows="10"
                placeholder="Текст сообщения"></textarea>
            </div>
            <input
              class="btn btn-primary block w-full"
              type="submit"
              value="Отправить сообщение"
            />
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>
