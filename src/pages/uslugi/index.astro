---
import PageHeader from "@components/PageHeader.astro";
import Shape from "@components/Shape.astro";
import Base from "@layouts/Base.astro";
import Cta from "@layouts/partials/Cta.astro";
import { getEntryBySlug } from "astro:content";
import { Image } from "@astrojs/image/components";
import CareerBenifits from "@layouts/function-components/CareerBenifits";
import ServicePosts from "@layouts/function-components/ServicePosts";
import { getSinglePage } from "@lib/contentParser.astro";
import { getTaxonomy } from "@lib/taxonomyParser.astro";
const uslugiIndex = await getEntryBySlug<any, string>("uslugi", "-index");
const { benifits, career, image } = uslugiIndex.data;
const categories = await getTaxonomy("uslugi", "categories");
const serviceposts = await getSinglePage("uslugi");
const page_data = {
  title: uslugiIndex.data.title,
  page_title: uslugiIndex.data.page_title,
  content: uslugiIndex.body,
};
---

<Base
  title={uslugiIndex.data.title}
  meta_title={uslugiIndex.data.meta_title}
  description={uslugiIndex.data.description}
  image={uslugiIndex.data.image}
>
  <section class="page-hero pb-14 pt-16">
    <div class="container">
      <PageHeader page_data={page_data} />
      <div class="col-12 mt-14">
        <div class="relative">
          <Image
            src={image}
            alt=""
            height={532}
            width={1044}
            class="w-full rounded"
          />
          <Image
            class="absolute -left-[8%] bottom-[12%] z-[-1] h-20 w-20 -rotate-90 lg:-left-8 lg:bottom-4 lg:h-[150px] lg:w-[150px]"
            src="/images/shape.png"
            height={130}
            width={130}
            alt=""
          />
          <Image
            class="absolute -bottom-4 -right-4 z-[-1] h-16 w-16 -rotate-90"
            src="/images/shape.png"
            alt=""
            height={64}
            width={64}
          />
        </div>
      </div>
    </div>
  </section>
  <CareerBenifits benifits={benifits} client:load />1231
  <ServicePosts
    client:load
    categories={categories}
    career={career}
    posts={serviceposts}
  />
  <Cta />
</Base>
